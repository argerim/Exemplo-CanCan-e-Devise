<h1>Roles</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.id %></td>
        <td><%= link_to role.name, role_path(role) %></td>
        <td><%= role.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_role_path(role), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', role_path(role), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_role_path, :class => 'btn btn-primary' %>
